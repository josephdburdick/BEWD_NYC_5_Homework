<%= form_for @movie do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br><br>

	<%= f.label :description %>
	<%= f.text_area :description %><br><br>

	<%= f.label :year_released %>
	<%= f.text_field :year_released %><br><br>

	<%= f.label :rating %>
	<%= f.text_field :rating %><br><br>

	<%= f.submit %>
<% end %>