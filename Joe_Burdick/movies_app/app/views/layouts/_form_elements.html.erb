<%= form_for @movie do |f| %>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br><br>

	<%= f.label :description %><br>
	<%= f.text_area :description %><br><br>

	<%= f.label :year_released %><br>
	<%= f.text_field :year_released %><br><br>

	<%= f.label :rating %><br>
	<%= f.text_field :rating %><br><br>

	<%= f.submit %>
<% end %>