<h1>Welcome to Retflix!</h1>
<p>See our collection of movies below</p>

<%= form_tag 'search', method: :get do %>
	<%= label_tag 'q', "Search" %>
	<%= text_field_tag 'q' %>
	<%= submit_tag %>
<% end %>
<p>
	<%= link_to "Add new movie", new_movie_path %> 
</p>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Year Released</th>
	</tr>

	<% @movies.each do |movie| %>
		<tr>
	      <td><%= movie.title %></td>
	      <td><%= movie.description %></td>
	      <td><%= movie.year_released %></td>
	      <td><%= link_to "Edit", edit_movie_path(movie.id) %></td>
    	</tr>
 	<% end %>
</table>

<br />


